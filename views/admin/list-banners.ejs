                                 </td>

                                 <td class="align-middle">
                                    <%= banners[i].title %>
                                 </td>
                                 <td class="align-middle">
                                    <%= (new Date(banners[i].date)).toLocaleDateString('en-GB').split('/').join('.') %>
                                 </td>
                                 <td class="align-middle">
                                    <% if (banners[i].isListed === true) { %>
                                       <a href="/admin/change-banner-status/?bannerId=<%= banners[i]._id %>" class="btn btn-sm btn-danger unlist-btn">
                                          Unlist
                                       </a>
                                    <% }else{ %>
                                       <a href="/admin/change-banner-status/?bannerId=<%= banners[i]._id %>" class="btn btn-sm btn-success list-btn">
                                          List
                                       </a>
                                       <% } %>
                                    
                                 </td>

                              </tr>
                              <% } %>
                                 <% } %>

