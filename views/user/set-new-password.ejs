      document.getElementById('forgotPassForm').addEventListener('submit', async (event) => {
         event.preventDefault();

         const isValid = validateForgotPasswordForm();

         if (isValid) {

            const data = {
               newPass: event.currentTarget.newPassword.value,
            }

            const response = await fetch('/set-new-password', {
               method: 'post',
               headers: {
                  'Content-Type': 'application/json'
               },
               body: JSON.stringify(data)
            })

            const result = await response.json()

            if (result.status === 'success') {
               Swal.fire({
                  icon: 'success',
                  title: result.message,
                  showConfirmButton: false,
                  timer: 1500
               })
               setTimeout(()=>{
                  location.href = '/login'
               },1500);
            }

         } else {
            Swal.fire({
                  icon: 'error',
                  title: result.message,
                  showConfirmButton: false,
                  timer: 1500
               })
         }
      })
   </script>

   <!-- Form Validation -->
   <script>
      function validateForgotPasswordForm() {
         let newPassword = document.getElementById('newPassword').value;
         let confirmNewPassword = document.getElementById('confirmNewPassword').value;
         let newPassError = document.getElementById('newPassError');
         let confirmNewPassError = document.getElementById('confirmNewPassError');
         let isValid = true;

         // Password Validation
         function validatePassword(password) {
            const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
            return passwordPattern.test(password);
         }

         if (newPassword.trim() === '') {
            newPassError.textContent = 'New Password is required';
            isValid = false;
         } else if (!validatePassword(newPassword)) {
            newPassError.textContent = 'Password must contain at least 8 characters, including uppercase, lowercase, numbers, and special characters';
            isValid = false;
         } else {
            newPassError.textContent = '';
         }

         if (confirmNewPassword.trim() === '') {
            confirmNewPassError.textContent = 'Confirm Password is required';
            isValid = false;
         } else if (confirmNewPassword !== newPassword) {
            confirmNewPassError.textContent = 'Passwords do not match';
            isValid = false;
         } else {
            confirmNewPassError.textContent = '';
         }

         // Remove errors after 3 seconds
         setTimeout(() => {
            newPassError.textContent = '';
            confirmNewPassError.textContent = '';
         }, 3000);

         return isValid;
      }

      // Toggle Password Visibility
      function togglePasswordVisibility(inputId) {
         const input = document.getElementById(inputId);
         input.type = input.type === "password" ? "text" : "password";
      }

      document.getElementById('toggleNewPassword').addEventListener('click', () => {
         togglePasswordVisibility('newPassword');
      });

      document.getElementById('toggleConfirmNewPassword').addEventListener('click', () => {
         togglePasswordVisibility('confirmNewPassword');
      });


   </script>


