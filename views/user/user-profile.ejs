   <!-- User Logout and Edit Profile -->
   <script>
      // User Logout button
      document.getElementById('userLogoutbtn').addEventListener('click', async (event) => {
         event.preventDefault();

         const response = await Swal.fire({
            title: "Logout",
            text: "Are you certain you want to log out?",
            icon: "question",
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#990f0f',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No !'
         });

         if (response.isConfirmed) {
            location.href = '/logout'
         }

      })

      // Edit Profile Form
      document.getElementById('editProfileForm').addEventListener('submit', async (event) => {
         event.preventDefault();

         const isValid = editProfileValidate();
         if (isValid) {
            const formData = {
               firstName: event.currentTarget.firstName.value,
               lastName: event.currentTarget.lastName.value,
               email: event.currentTarget.userEmail.value,
               mobile: event.currentTarget.mobileNumber.value,
               userId: event.currentTarget.userId.value
            }

            const response = await fetch('/edit-profile', {
               method: 'post',
               headers: {
                  'Content-Type': 'application/json'
               },
               body: JSON.stringify(formData)
            })

            const result = await response.json();
            if (result.status === 'success') {
               Swal.fire({
                  title: result.message,
                  icon: 'success',
                  timer: 1000,
                  showConfirmButton: false,
               })
               setTimeout(() => {
                  location.href = location.href
               }, 1500);
            } else if (result.status === 'sessionError') {
               Swal.fire({
                  icon: 'info',
                  title: result.message,
                  showConfirmButton: false,
                  timer: 1000
               })
               setTimeout(() => {
                  location.href = '/login'
               }, 1500);
            } else {
               Swal.fire({
                  title: result.message,
                  icon: 'error',
                  timer: 1000,
                  showConfirmButton: false,
               })
            }
         } else {
            console.log('Error');
         }
      })
   </script>
