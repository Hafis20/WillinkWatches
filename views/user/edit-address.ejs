   <script>
      document.getElementById('editAddressForm').addEventListener('submit', async (event) => {
         event.preventDefault()

         const isValid = addressValidate();

         if (isValid) {

            const formData = {
               name: event.currentTarget.name.value,
               mobile: event.currentTarget.mobileNumber.value,
               homeAddress: event.currentTarget.address.value,
               city: event.currentTarget.city.value,
               street: event.currentTarget.street.value,
               postalCode: event.currentTarget.pcode.value,
               addressId:event.currentTarget.addressId.value
            }

            const response = await fetch('/edit-address', {
               method: 'post',
               headers: {
                  'Content-Type': 'application/json'
               },
               body: JSON.stringify(formData)
            })

            const result = await response.json();

            if (result.status === 'success') {
               Swal.fire({
                  icon: 'success',
                  title: result.message,
                  showConfirmButton: false,
                  timer: 1500
               })
               setTimeout(() => {
                  location.href = '/manage-address'
               }, 2000);
            } else {
               Swal.fire({
                  icon: 'error',
                  title: result.message,
                  showConfirmButton: false,
                  timer: 1500
               })
            }
         }
      })

   </script>


